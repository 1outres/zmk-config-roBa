#include <input/processors.dtsi>
#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/pointing.h>

&mt {
    flavor = "balanced";
    quick-tap-ms = <200>;
};

&lt { quick-tap-ms = <200>; };

&mkp_input_listener { input-processors = <&zip_temp_layer 2 200>; };

&trackball {
    scroll-layers = <3>;

    // arrows {
    //     layers = <3>;
